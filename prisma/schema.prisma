generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id           BigInt      @id @default(autoincrement())
  userID       String      @unique @default(uuid())
  name         String
  phone        String
  usn          String
  email        String      @unique
  password     String
  profileImg   String
  role         roles       @default(MEMBER)
  hasAccessTo  accesses    @default(NO_EDIT_ACCESS)
  isVerified   Boolean     @default(false)
  refreshToken String      @db.Text
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  expenses     Expenses[]
  Inventory    Inventory[]
  Events       Events[]
  eventID      String?

  @@index([id])
  @@index([email])
  @@index([eventID])
}

model Expenses {
  id        BigInt             @id @default(autoincrement())
  user      Users              @relation(fields: [user_ID], references: [userID], onDelete: NoAction)
  user_ID   String
  expenseID String             @unique @default(uuid())
  desc      Json
  status    status
  catagory  expense_catagories
  price     Float
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([id])
  @@index([user_ID])
}

model Inventory {
  id        BigInt               @id @default(autoincrement())
  user      Users                @relation(fields: [user_ID], references: [userID], onDelete: NoAction)
  user_ID   String
  itemName  String
  itemID    String               @unique @default(uuid())
  quantity  Int
  catagory  inventory_catagories
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@index([id])
  @@index([user_ID])
}

model Events {
  id          BigInt    @id @default(autoincrement())
  eventName   String
  eventID     String    @unique @default(uuid())
  catagory    String
  desc        String    @db.Text
  max_entries Int
  users       Users[]
  eventDate   DateTime?
  userID      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([id])
  @@index([userID])
}

enum roles {
  PRESIDENT
  VICE_PRESIDENT
  CAPTAIN
  SENIOR
  TREASURER
  MEMBER
  IOT
  INVENTORY
  DOCUMENTATION
  MEDIA_AND_PUBLICITY
  EVENT_LEAD
  CORE_MEMBER
}

enum accesses {
  ADMIN
  INVENTORY
  EVENTS
  DOCUMENTS
  EXPENSES
  MEDIA_AND_PUBLICITY
  NO_EDIT_ACCESS
}

enum expense_catagories {
  IOT
  WARBOT
  STATIONARY
}

enum inventory_catagories {
  IOT
  WARBOT
  STATIONARY
}

enum status {
  PENDING
  APPROVED
}
