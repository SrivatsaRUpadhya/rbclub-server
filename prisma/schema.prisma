generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id           BigInt      @id @default(autoincrement())
  userID       String      @unique @default(uuid())
  IDCardNum	   String?
  name         String?
  phone        String?
  usn          String?
  email        String      @unique
  course	   courses?
  password     String?
  profileImg   String?
  role         roles       @default(MEMBER)
  hasAccessTo  accesses    @default(NO_EDIT_ACCESS)
  Inventory    Inventory[]
  Events       Events[]
  skills	   skills?
  dob		   DateTime?
  eventID      String?
  expenses     Expenses[]
  isVerified   Boolean     @default(false)
  paymentID String?
  paymentStatus paymentStatus @default(PENDING)
  isProfileComplete   Boolean     @default(false)
  refreshToken String      @db.Text
  accessToken String?      @db.Text
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  yearOfStudy  Int?
  @@index([id])
  @@index([email])
  @@index([eventID])
}

model Expenses {
  id        BigInt             @id @default(autoincrement())
  user      Users              @relation(fields: [user_ID], references: [userID], onDelete: NoAction)
  user_ID   String
  expenseID String             @unique @default(uuid())
  desc      Json
  status    status
  catagory  expense_catagories
  price     Float
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  @@index([id])
  @@index([user_ID])
}

model Inventory {
  id        BigInt               @id @default(autoincrement())
  user      Users                @relation(fields: [user_ID], references: [userID], onDelete: NoAction)
  user_ID   String
  itemName  String
  itemID    String               @unique @default(uuid())
  quantity  Int
  condition String?
  remarks   String?
  catagory  inventory_catagories
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt

  @@index([id])
  @@index([user_ID])
}

model Events {
  id          BigInt    @id @default(autoincrement())
  eventName   String
  eventID     String    @unique @default(uuid())
  catagory    String
  desc        String    @db.Text
  max_entries Int
  users       Users[]
  eventDate   DateTime?
  userID      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([id])
  @@index([userID])
}

model Settings{
	id Int @id @default(autoincrement())
	maintanenceMode Boolean @default(false)
	eventLimitPerUser Int @default(-1)
	skipOtpOnRegister Boolean @default(false)
	lastUpdatedBy String? 
	createdAt DateTime @default(now())
	updatedAt DateTime @default(now())

	@@index([id])
}

enum roles {
  PRESIDENT
  VICE_PRESIDENT
  CAPTAIN
  SENIOR
  TREASURER
  MEMBER
  IOT
  INVENTORY
  DOCUMENTATION
  MEDIA_AND_PUBLICITY
  EVENT_LEAD
  CORE_MEMBER
}

enum accesses {
  ADMIN
  INVENTORY
  EVENTS
  DOCUMENTS
  EXPENSES
  MEDIA_AND_PUBLICITY
  NO_EDIT_ACCESS
}

enum expense_catagories {
  IOT
  WARBOT
  STATIONARY
}

enum inventory_catagories {
  IOT
  WARBOT
  STATIONARY
}

enum status {
  PENDING
  APPROVED
}

enum courses{
    ARTIFICIAL_INTELLIGENCE_DATA_SCIENCE
    ARTIFICIAL_INTELLIGENCE_MACHINE_LEARNING
    BIOTECHNOLOGY
    CIVIL_ENGINEERING
    COMPUTER_COMMUNICATION_ENGINEERING
    COMPUTER_SCIENCE_ENGINEERING
    COMPUTER_SCIENCE_FULL_STACK_DEVELOPMENT
    COMPUTER_SCIENCE_CYBER_SECURITY
	ELECTRICAL_ELECTRONICS_ENGINEERING
    ELECTRONICS_COMMUNICATION_ENGINEERING
    ELECTRONICS_VLSI_DESIGN_TECHNOLOGY
    INFORMATION_SCIENCE_ENGINEERING
    MECHANICAL_ENGINEERING
    ROBOTICS_ARTIFICIAL_INTELLIGENCE
	}

	enum paymentStatus{
		PENDING
		RECEIVED
	}

	enum skills{
		BEGINNER_EXITED_TO_GET_STARTED @map("A BEGINNER AND EXITED TO GET STARTED")
		BASICS_WEB_DEV @map("I KNOW BASICS OF WEB DEV")
		IOT @map("SOMETHING ABOUT IOT")
		DESIGN @map("I AM MORE INTO DESIGNING(CAD, FUSION 360 etc)")
	}
