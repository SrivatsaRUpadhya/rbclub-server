// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Users {
  id           BigInt     @default(autoincrement())
  userID       String     @unique @default(uuid())
  name         String
  phone        String
  usn          String
  email        String     @unique
  password     String
  profileImg   String
  role         roles
  isVerified   Boolean
  refreshToken String     @db.Text
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  expenses     Expenses[]

  @@index([id])
  @@index([email])
}

model Expenses {
  id        BigInt     @default(autoincrement())
  user      Users      @relation(fields: [user_ID], references: [userID], onDelete: Cascade)
  user_ID   String
  expenseID String     @unique @default(uuid())
  desc      Json
  status    status
  catagory  catagories
  price     Float
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([id])
  @@index([user_ID])
}

enum roles {
  IOT
  INVENTORY
  DOCUMENTATION
  MANAGE_EVENTS
  WORKSHOP
}

enum catagories {
  IOT
  WARBOT
  STATIONARY
}

enum status {
  PENDING
  APPROVED
}
